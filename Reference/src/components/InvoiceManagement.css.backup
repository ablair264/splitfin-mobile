/* InvoiceManagement.css - Complete styling for the InvoiceManagement component */

.invoice-management-container {
  padding: 24px;
  background-color: #0a0e1a;
  min-height: 100vh;
  color: #ffffff;
}

.invoice-management-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32px;
  flex-wrap: wrap;
  gap: 16px;
}

.invoice-management-header h1 {
  font-size: 32px;
  font-weight: 700;
  color: #ffffff;
  margin: 0;
  background: linear-gradient(135deg, #79d5e9 0%, #4daeac 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Metrics Grid */
.metrics-grid-4 {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 20px;
  margin-bottom: 32px;
}

/* Controls Section */
.invoices-controls {
  display: flex;
  gap: 16px;
  margin-bottom: 24px;
  flex-wrap: wrap;
  align-items: center;
}

.search-container {
  position: relative;
  flex: 1;
  min-width: 300px;
}

.search-icon {
  position: absolute;
  left: 16px;
  top: 50%;
  transform: translateY(-50%);
  color: #6b7280;
  font-size: 16px;
  z-index: 2;
}

.search-input {
  width: 100%;
  padding: 12px 16px 12px 48px;
  background-color: #1a1f2a;
  border: 1px solid #374151;
  border-radius: 12px;
  color: #ffffff;
  font-size: 16px;
  transition: all 0.3s ease;
}

.search-input:focus {
  outline: none;
  border-color: #79d5e9;
  box-shadow: 0 0 0 3px rgba(121, 213, 233, 0.1);
}

.search-input::placeholder {
  color: #6b7280;
}

.filter-controls {
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
}

.status-filter,
.sort-filter {
  padding: 12px 16px;
  background-color: #1a1f2a;
  border: 1px solid #374151;
  border-radius: 12px;
  color: #ffffff;
  font-size: 14px;
  cursor: pointer;
  transition: all 0.3s ease;
  min-width: 140px;
}

.status-filter:focus,
.sort-filter:focus {
  outline: none;
  border-color: #79d5e9;
  box-shadow: 0 0 0 3px rgba(121, 213, 233, 0.1);
}

.status-filter:hover,
.sort-filter:hover {
  border-color: #4b5563;
}

/* Table Styling */
.invoices-table-container {
  background-color: #1a1f2a;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  margin-bottom: 24px;
}

.invoices-table {
  width: 100%;
}

.table-header {
  background: linear-gradient(135deg, #2a3441 0%, #1e2532 100%);
  border-bottom: 1px solid #374151;
}

.table-row {
  display: grid;
  grid-template-columns: 140px 200px 120px 120px 120px 120px 100px 140px;
  gap: 16px;
  padding: 16px 24px;
  align-items: center;
  border-bottom: 1px solid #374151;
  transition: all 0.2s ease;
}

.table-header .table-row {
  font-weight: 600;
  color: #e5e7eb;
  border-bottom: 2px solid #374151;
}

.table-body .table-row:hover {
  background-color: #252b3a;
  transform: translateY(-1px);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.table-body .table-row:last-child {
  border-bottom: none;
}

/* Overdue highlighting */
.table-row.overdue-row {
  border-left: 4px solid #ef4444;
  background-color: rgba(239, 68, 68, 0.05);
}

.table-row.overdue-row:hover {
  background-color: rgba(239, 68, 68, 0.1);
}

.table-cell {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.table-cell strong {
  color: #ffffff;
  font-weight: 600;
}

/* Invoice Number */
.invoice-number {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.invoice-number strong {
  font-size: 14px;
  color: #ffffff;
}

.order-ref {
  font-size: 11px;
  color: #6b7280;
  font-style: italic;
}

/* Customer Info */
.customer-info {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.customer-info strong {
  font-size: 14px;
  color: #ffffff;
}

.company-name {
  font-size: 12px;
  color: #9ca3af;
  font-weight: 400;
}

/* Due Date */
.due-date {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.days-info {
  font-size: 11px;
  padding: 2px 6px;
  border-radius: 12px;
  font-weight: 500;
  text-align: center;
}

.days-info.warning {
  background-color: rgba(251, 191, 36, 0.2);
  color: #fbbf24;
}

.days-info.overdue {
  background-color: rgba(239, 68, 68, 0.2);
  color: #ef4444;
}

/* Balance highlighting */
.outstanding {
  color: #fbbf24 !important;
}

.paid {
  color: #4ade80 !important;
}

/* Status Badges */
.status-badge {
  display: inline-flex;
  align-items: center;
  gap: 4px;
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: 600;
  text-transform: capitalize;
  max-width: fit-content;
}

.status-paid {
  background-color: rgba(34, 197, 94, 0.2);
  color: #4ade80;
  border: 1px solid rgba(34, 197, 94, 0.3);
}

.status-unpaid {
  background-color: rgba(59, 130, 246, 0.2);
  color: #60a5fa;
  border: 1px solid rgba(59, 130, 246, 0.3);
}

.status-overdue {
  background-color: rgba(239, 68, 68, 0.2);
  color: #ef4444;
  border: 1px solid rgba(239, 68, 68, 0.3);
}

.status-draft {
  background-color: rgba(156, 163, 175, 0.2);
  color: #9ca3af;
  border: 1px solid rgba(156, 163, 175, 0.3);
}

.warning-icon {
  font-size: 10px;
  margin-left: 4px;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

/* Action Buttons */
.action-buttons {
  display: flex;
  gap: 8px;
  align-items: center;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.2s ease;
  color: #9ca3af;
  background-color: transparent;
  border: 1px solid #374151;
}

.action-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

.view-btn:hover {
  background-color: rgba(59, 130, 246, 0.2);
  color: #60a5fa;
  border-color: #60a5fa;
}

.customer-btn:hover {
  background-color: rgba(34, 197, 94, 0.2);
  color: #4ade80;
  border-color: #4ade80;
}

.download-btn:hover {
  background-color: rgba(251, 191, 36, 0.2);
  color: #fbbf24;
  border-color: #fbbf24;
}

/* Pagination */
.pagination {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 0;
  flex-wrap: wrap;
  gap: 16px;
}

.pagination-info {
  color: #9ca3af;
  font-size: 14px;
}

.pagination-controls {
  display: flex;
  align-items: center;
  gap: 16px;
}

.pagination-btn {
  padding: 8px 16px;
  background-color: #1a1f2a;
  border: 1px solid #374151;
  border-radius: 8px;
  color: #ffffff;
  font-size: 14px;
  cursor: pointer;
  transition: all 0.2s ease;
}

.pagination-btn:hover:not(:disabled) {
  background-color: #252b3a;
  border-color: #4b5563;
}

.pagination-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.page-info {
  color: #e5e7eb;
  font-size: 14px;
  font-weight: 500;
}

/* Loading States */
.invoices-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 50vh;
  color: #9ca3af;
}

.invoices-loading p {
  margin-top: 16px;
  font-size: 16px;
}

/* Empty States */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80px 24px;
  text-align: center;
  color: #6b7280;
}

.empty-icon {
  font-size: 64px;
  margin-bottom: 16px;
  opacity: 0.5;
}

.empty-state h3 {
  font-size: 24px;
  font-weight: 600;
  color: #e5e7eb;
  margin: 0 0 8px 0;
}

.empty-state p {
  font-size: 16px;
  color: #9ca3af;
  margin: 0;
}

/* Responsive Design */
@media (max-width: 1400px) {
  .table-row {
    grid-template-columns: 120px 180px 100px 100px 100px 100px 90px 120px;
    gap: 12px;
  }
}

@media (max-width: 1200px) {
  .table-row {
    grid-template-columns: 100px 160px 90px 90px 90px 90px 80px 100px;
    gap: 10px;
    padding: 12px 16px;
  }
}

@media (max-width: 768px) {
  .invoice-management-container {
    padding: 16px;
  }
  
  .invoice-management-header h1 {
    font-size: 24px;
  }
  
  .metrics-grid-4 {
    grid-template-columns: 1fr;
    gap: 16px;
  }
  
  .invoices-controls {
    flex-direction: column;
    align-items: stretch;
  }
  
  .search-container {
    min-width: unset;
  }
  
  .filter-controls {
    justify-content: stretch;
  }
  
  .status-filter,
  .sort-filter {
    flex: 1;
    min-width: unset;
  }
  
  .table-row {
    grid-template-columns: 1fr;
    gap: 12px;
    padding: 20px 16px;
  }
  
  .table-cell {
    padding: 8px 0;
    border-bottom: 1px solid #374151;
  }
  
  .table-cell:last-child {
    border-bottom: none;
  }
  
  .table-header {
    display: none;
  }
  
  .table-cell::before {
    content: attr(data-label) ": ";
    font-weight: 600;
    color: #9ca3af;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 4px;
  }
  
  .action-buttons {
    justify-content: flex-start;
    margin-top: 12px;
  }
  
  .pagination {
    flex-direction: column;
    text-align: center;
  }
  
  .pagination-controls {
    order: -1;
  }
}

/* Animations */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.invoices-table-container {
  animation: fadeIn 0.5s ease-out;
}

.table-row {
  animation: fadeIn 0.3s ease-out;
}

/* Scrollbar Styling */
.invoices-table-container::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

.invoices-table-container::-webkit-scrollbar-track {
  background: #1a1f2a;
}

.invoices-table-container::-webkit-scrollbar-thumb {
  background: #374151;
  border-radius: 4px;
}

.invoices-table-container::-webkit-scrollbar-thumb:hover {
  background: #4b5563;
}

/* Priority invoice highlighting */
.table-row.priority-invoice {
  border-left: 4px solid #79d5e9;
}

.table-row.priority-invoice:hover {
  background-color: rgba(121, 213, 233, 0.05);
}