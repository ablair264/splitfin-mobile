/* CustomersManagement.css */

.customers-container {
  min-height: 100vh;
  background: #f8f9fa;
}

/* Loading State */
.customers-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400px;
  color: var(--gray-600);
}

.customers-loading p {
  margin-top: 16px;
  font-size: 16px;
}

/* Controls Section */
.customers-controls {
  display: flex;
  gap: 20px;
  margin-bottom: 24px;
  align-items: center;
}

.filter-controls {
  display: flex;
  gap: 12px;
}

.sort-filter {
  padding: 10px 16px;
  border: 1px solid var(--gray-300);
  border-radius: var(--radius-lg);
  font-size: 14px;
  background: white;
  color: var(--gray-700);
  cursor: pointer;
  transition: all var(--transition-base);
}

.sort-filter:focus {
  outline: none;
  border-color: var(--primary-blue);
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

/* Customer Table Specific Styles */
.customers-table {
  margin-bottom: 24px;
}

.customer-logo-name {
  display: flex;
  align-items: center;
  gap: 12px;
}

.customer-logo {
  width: 40px;
  height: 40px;
  border-radius: var(--radius-full);
  object-fit: cover;
  border: 2px solid var(--gray-200);
}

.customer-logo-placeholder {
  width: 40px;
  height: 40px;
  border-radius: var(--radius-full);
  background: linear-gradient(135deg, var(--primary-purple), var(--primary-purple-light));
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  font-size: 18px;
}

/* Pagination */
.pagination {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px;
  background: white;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
}

.pagination-info {
  font-size: 14px;
  color: var(--gray-600);
}

.pagination-controls {
  display: flex;
  align-items: center;
  gap: 16px;
}

.pagination-btn {
  padding: 8px 16px;
  border: 1px solid var(--gray-300);
  background: white;
  color: var(--gray-700);
  border-radius: var(--radius-md);
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: all var(--transition-base);
}

.pagination-btn:hover:not(:disabled) {
  background: var(--gray-50);
  border-color: var(--gray-400);
}

.pagination-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.page-info {
  font-size: 14px;
  color: var(--gray-700);
  font-weight: 500;
}

/* Dark Mode Support */
@media (prefers-color-scheme: dark) {
  .customers-container {
    background: var(--dark-bg);
  }
  
  .sort-filter {
    background: var(--dark-surface);
    border-color: var(--dark-border);
    color: var(--dark-text);
  }
  
  .sort-filter:focus {
    border-color: var(--primary-blue);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
  }
  
  .customer-logo {
    border-color: var(--dark-border);
  }
  
  .pagination {
    background: var(--dark-surface);
  }
  
  .pagination-info {
    color: var(--dark-text-secondary);
  }
  
  .pagination-btn {
    background: var(--dark-surface);
    border-color: var(--dark-border);
    color: var(--dark-text);
  }
  
  .pagination-btn:hover:not(:disabled) {
    background: var(--dark-surface-light);
    border-color: var(--dark-text-secondary);
  }
  
  .page-info {
    color: var(--dark-text);
  }
}

/* Responsive Design */
@media (max-width: 768px) {
  .customers-controls {
    flex-direction: column;
    align-items: stretch;
  }
  
  .filter-controls {
    width: 100%;
  }
  
  .sort-filter {
    width: 100%;
  }
  
  .pagination {
    flex-direction: column;
    gap: 16px;
    align-items: stretch;
    text-align: center;
  }
  
  .pagination-controls {
    justify-content: center;
  }
}