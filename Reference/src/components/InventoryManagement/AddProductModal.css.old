/* CSS Variables for Dark Theme */
:root {
  --bg-primary: #1a1d21;
  --bg-secondary: #0f1114;
  --bg-tertiary: #111827;
  --bg-hover: #1f2937;
  --text-primary: #ffffff;
  --text-secondary: #9ca3af;
  --text-tertiary: #6b7280;
  --border-color: #2a2d33;
  --primary-color: #3b82f6;
  --primary-hover: #2563eb;
  --success-color: #22c55e;
  --warning-color: #fbbf24;
  --danger-color: #ef4444;
  --info-color: #60a5fa;
  --info-hover: #3b82f6;
  --warning-hover: #f59e0b;
}

/* AddProductModal.css */
.add-product-modal {
  max-width: 800px;
  width: 100%;
}

/* Step Indicator */
.step-indicator {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 1.5rem;
  border-bottom: 1px solid #2a2d33;
  background: #0f1114;
}

.step {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0 2rem;
  position: relative;
  opacity: 0.5;
  transition: opacity 0.3s ease;
}

.step.active {
  opacity: 1;
}

.step:not(:last-child)::after {
  content: '';
  position: absolute;
  right: -1rem;
  width: 2rem;
  height: 2px;
  background: #374151;
  top: 50%;
  transform: translateY(-50%);
}

.step.active:not(:last-child)::after {
  background: #3b82f6;
}

.step span {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  background: #374151;
  color: #9ca3af;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  font-size: 0.9rem;
  transition: all 0.3s ease;
}

.step.active span {
  background: #3b82f6;
  color: white;
}

.step label {
  font-size: 0.85rem;
  font-weight: 500;
  color: #9ca3af;
  white-space: nowrap;
}

.step.active label {
  color: #ffffff;
}

/* Form Steps */
.form-step {
  padding: 1.5rem;
}

.form-step h3 {
  font-size: 1.25rem;
  font-weight: 600;
  color: #ffffff;
  margin: 0 0 1.5rem 0;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.form-step h3 svg {
  font-size: 1rem;
  color: #60a5fa;
}

/* Form Grid */
.form-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1rem;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.form-group.full-width {
  grid-column: 1 / -1;
}

.form-group label {
  font-size: 0.85rem;
  font-weight: 500;
  color: #9ca3af;
  display: flex;
  align-items: center;
  gap: 0.25rem;
}

.form-group label svg {
  font-size: 0.75rem;
}

.form-group input,
.form-group select,
.form-group textarea {
  padding: 0.625rem 0.75rem;
  border: 1px solid #374151;
  border-radius: 6px;
  background: #1a1d21;
  color: #ffffff;
  font-size: 0.9rem;
  transition: all 0.2s ease;
  width: 100%;
}

.form-group input::placeholder,
.form-group textarea::placeholder {
  color: #6b7280;
}

.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
  outline: none;
  border-color: #3b82f6;
  background: #1f2937;
}

.form-group input:disabled {
  background: #111827;
  color: #6b7280;
  cursor: not-allowed;
}

.margin-input {
  font-weight: 600;
  color: #60a5fa !important;
}

/* Image Details Grid */
.image-details-grid {
  display: grid;
  grid-template-columns: 300px 1fr;
  gap: 2rem;
}

.image-upload-area {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.image-preview-box {
  width: 100%;
  height: 300px;
  background: #0f1114;
  border: 2px dashed #374151;
  border-radius: 8px;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: border-color 0.3s ease;
}

.image-preview-box:hover {
  border-color: #3b82f6;
}

.image-preview-box img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.upload-placeholder {
  text-align: center;
  color: #6b7280;
  padding: 2rem;
}

.upload-placeholder svg {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.upload-placeholder p {
  margin: 0.5rem 0;
}

.upload-hint {
  font-size: 0.8rem;
  opacity: 0.7;
}

.upload-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: 0.75rem 1rem;
  background: #3b82f6;
  color: white;
  border-radius: 6px;
  font-size: 0.9rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  border: none;
}

.upload-btn:hover {
  background: #2563eb;
  transform: translateY(-1px);
}

.details-area {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.details-area textarea {
  resize: vertical;
  min-height: 120px;
  font-family: inherit;
}

/* Error Message */
.error-message {
  background: rgba(239, 68, 68, 0.1);
  border: 1px solid #ef4444;
  color: #ef4444;
  padding: 0.75rem 1rem;
  border-radius: 6px;
  font-size: 0.9rem;
  margin-bottom: 1rem;
}

/* Footer */
.modal-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer-left,
.footer-right {
  display: flex;
  gap: 1rem;
}

.btn-primary:disabled {
  opacity: 0.7;
  cursor: not-allowed;
}

.spinner {
  animation: spin 1s linear infinite;
}

/* Responsive Design */
@media (max-width: 768px) {
  .add-product-modal {
    max-width: 100%;
  }

  .step-indicator {
    padding: 1rem 0.5rem;
  }

  .step {
    padding: 0 1rem;
  }

  .step:not(:last-child)::after {
    right: -0.5rem;
    width: 1rem;
  }

  .step label {
    display: none;
  }

  .image-details-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  .image-preview-box {
    height: 200px;
  }

  .modal-footer {
    flex-direction: column;
    gap: 1rem;
  }

  .footer-left,
  .footer-right {
    width: 100%;
    justify-content: center;
  }

  .form-grid {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 480px) {
  .step {
    padding: 0 0.5rem;
  }

  .step span {
    width: 25px;
    height: 25px;
    font-size: 0.8rem;
  }
}