/* CSS Variables for Dark Theme */
:root {
  --bg-primary: #1a1d21;
  --bg-secondary: #0f1114;
  --bg-tertiary: #111827;
  --bg-hover: #1f2937;
  --text-primary: #ffffff;
  --text-secondary: #9ca3af;
  --text-tertiary: #6b7280;
  --border-color: #2a2d33;
  --primary-color: #3b82f6;
  --primary-hover: #2563eb;
  --success-color: #22c55e;
  --warning-color: #fbbf24;
  --danger-color: #ef4444;
  --info-color: #60a5fa;
  --info-hover: #3b82f6;
  --warning-hover: #f59e0b;
}

/* ProductDetailsModal.css */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 1rem;
  animation: fadeIn 0.2s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.modal-content {
  background: #1a1d21;
  border-radius: 12px;
  box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  max-width: 900px;
  width: 100%;
  max-height: 90vh;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(20px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.5rem;
  border-bottom: 1px solid #2a2d33;
}

.modal-header h2 {
  font-size: 1.5rem;
  font-weight: 600;
  color: #ffffff;
  margin: 0;
}

.close-btn {
  background: #2a2d33;
  border: none;
  font-size: 1.25rem;
  color: #9ca3af;
  cursor: pointer;
  padding: 0.5rem;
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 6px;
  transition: all 0.2s ease;
}

.close-btn:hover {
  background: #374151;
  color: #ffffff;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 1.5rem;
}

.product-details-grid {
  display: grid;
  grid-template-columns: 300px 1fr;
  gap: 2rem;
}

/* Image Section */
.product-image-section {
  position: sticky;
  top: 0;
  height: fit-content;
}

.product-detail-image {
  width: 100%;
  height: 300px;
  object-fit: contain;
  border-radius: 8px;
  border: 1px solid #2a2d33;
  background: #0f1114;
}

.image-skeleton {
  width: 100%;
  height: 300px;
  background: #2a2d33;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-placeholder-large {
  width: 100%;
  height: 300px;
  background: #0f1114;
  border: 2px dashed #2a2d33;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 1rem;
  color: #6b7280;
}

.image-placeholder-large svg {
  font-size: 3rem;
}

/* Product Info Section */
.product-info-section {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.product-title-section {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 1rem;
}

.product-title-section h3 {
  font-size: 1.5rem;
  font-weight: 600;
  color: #ffffff;
  margin: 0;
  flex: 1;
}

/* Status Badge */
.status-badge {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 0.75rem;
  border-radius: 20px;
  font-size: 0.8rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.status-badge.status-success {
  background: rgba(34, 197, 94, 0.1);
  color: #22c55e;
}

.status-badge.status-warning {
  background: rgba(251, 191, 36, 0.1);
  color: #fbbf24;
}

.status-badge.status-danger {
  background: rgba(239, 68, 68, 0.1);
  color: #ef4444;
}

.status-badge svg {
  font-size: 0.7rem;
}

/* Detail Groups */
.detail-groups {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.detail-group {
  background: #0f1114;
  border: 1px solid #2a2d33;
  border-radius: 8px;
  padding: 1.25rem;
}

.detail-group h4 {
  font-size: 1rem;
  font-weight: 600;
  color: #ffffff;
  margin: 0 0 1rem 0;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.detail-group h4 svg {
  font-size: 0.9rem;
  color: #60a5fa;
}

.detail-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1rem;
}

.detail-item {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.detail-item label {
  font-size: 0.8rem;
  font-weight: 500;
  color: #9ca3af;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  display: flex;
  align-items: center;
  gap: 0.25rem;
}

.detail-item label svg {
  font-size: 0.7rem;
}

.detail-item span {
  font-size: 1rem;
  font-weight: 500;
  color: #ffffff;
}

.stock-value {
  font-size: 1.25rem;
  font-weight: 600;
  color: #60a5fa;
}

.price-value {
  font-family: 'Courier New', monospace;
  font-size: 1.1rem;
  color: #22c55e;
}

.margin-value {
  font-weight: 600;
  color: #60a5fa;
}

.status-text {
  text-transform: capitalize;
}

.status-text.active {
  color: #22c55e;
}

.status-text.inactive {
  color: #ef4444;
}

.product-description {
  font-size: 0.95rem;
  line-height: 1.6;
  color: #e5e7eb;
  margin: 0;
}

/* Modal Footer */
.modal-footer {
  padding: 1.5rem;
  border-top: 1px solid #2a2d33;
  display: flex;
  justify-content: flex-end;
  gap: 1rem;
}

.btn-primary,
.btn-secondary {
  padding: 0.75rem 1.5rem;
  border-radius: 6px;
  font-size: 0.9rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  border: none;
}

.btn-primary {
  background: #3b82f6;
  color: white;
}

.btn-primary:hover {
  background: #2563eb;
  transform: translateY(-1px);
}

.btn-secondary {
  background: #374151;
  color: #ffffff;
  border: 1px solid #4b5563;
}

.btn-secondary:hover {
  background: #4b5563;
  border-color: #6b7280;
}

/* Responsive Design */
@media (max-width: 768px) {
  .modal-content {
    max-width: 100%;
    max-height: 100vh;
    border-radius: 0;
  }

  .product-details-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  .product-image-section {
    position: relative;
  }

  .detail-grid {
    grid-template-columns: 1fr;
  }

  .modal-body {
    padding: 1rem;
  }
}

/* Spinner */
.dmb-spinner {
  width: 40px;
  height: 40px;
  border: 4px solid #374151;
  border-top-color: #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}