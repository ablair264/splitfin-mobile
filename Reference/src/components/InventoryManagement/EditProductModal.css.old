/* CSS Variables for Dark Theme */
:root {
  --bg-primary: #1a1d21;
  --bg-secondary: #0f1114;
  --bg-tertiary: #111827;
  --bg-hover: #1f2937;
  --text-primary: #ffffff;
  --text-secondary: #9ca3af;
  --text-tertiary: #6b7280;
  --border-color: #2a2d33;
  --primary-color: #3b82f6;
  --primary-hover: #2563eb;
  --success-color: #22c55e;
  --warning-color: #fbbf24;
  --danger-color: #ef4444;
  --info-color: #60a5fa;
  --info-hover: #3b82f6;
  --warning-hover: #f59e0b;
}

/* EditProductModal.css */
.edit-product-modal {
  max-width: 1000px;
  width: 100%;
}

.edit-form-grid {
  display: grid;
  grid-template-columns: 250px 1fr;
  gap: 2rem;
}

/* Image Upload Section */
.image-upload-section {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  position: sticky;
  top: 0;
  height: fit-content;
}

.image-upload-section h4 {
  font-size: 1rem;
  font-weight: 600;
  color: #ffffff;
  margin: 0;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.image-upload-section h4 svg {
  font-size: 0.9rem;
  color: #60a5fa;
}

.current-image {
  width: 100%;
  height: 250px;
  background: #0f1114;
  border: 1px solid #2a2d33;
  border-radius: 8px;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.current-image img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.image-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  color: #6b7280;
}

.image-placeholder svg {
  font-size: 2.5rem;
}

.upload-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: 0.75rem 1rem;
  background: #3b82f6;
  color: white;
  border-radius: 6px;
  font-size: 0.9rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  border: none;
}

.upload-btn:hover {
  background: #2563eb;
  transform: translateY(-1px);
}

/* Form Fields */
.form-fields {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.form-section {
  background: #0f1114;
  border: 1px solid #2a2d33;
  border-radius: 8px;
  padding: 1.25rem;
}

.form-section h4 {
  font-size: 1rem;
  font-weight: 600;
  color: #ffffff;
  margin: 0 0 1rem 0;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.form-section h4 svg {
  font-size: 0.9rem;
  color: #60a5fa;
}

.form-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.form-group.full-width {
  grid-column: 1 / -1;
}

.form-group label {
  font-size: 0.85rem;
  font-weight: 500;
  color: #9ca3af;
  display: flex;
  align-items: center;
  gap: 0.25rem;
}

.form-group label svg {
  font-size: 0.75rem;
}

.form-group input,
.form-group select,
.form-group textarea {
  padding: 0.625rem 0.75rem;
  border: 1px solid #374151;
  border-radius: 6px;
  background: #1a1d21;
  color: #ffffff;
  font-size: 0.9rem;
  transition: border-color 0.2s ease;
  width: 100%;
}

.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
  outline: none;
  border-color: #3b82f6;
  background: #1f2937;
}

.form-group input:disabled {
  background: #111827;
  color: #6b7280;
  cursor: not-allowed;
}

.margin-input {
  font-weight: 600;
  color: #60a5fa !important;
}

.form-group textarea {
  resize: vertical;
  min-height: 80px;
  font-family: inherit;
}

/* Error Message */
.error-message {
  background: rgba(239, 68, 68, 0.1);
  border: 1px solid #ef4444;
  color: #ef4444;
  padding: 0.75rem 1rem;
  border-radius: 6px;
  font-size: 0.9rem;
  margin-bottom: 1rem;
}

/* Buttons */
.modal-footer button {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.btn-primary:disabled {
  opacity: 0.7;
  cursor: not-allowed;
}

.spinner {
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* Responsive Design */
@media (max-width: 768px) {
  .edit-form-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  .image-upload-section {
    position: relative;
  }

  .form-grid {
    grid-template-columns: 1fr;
  }
}